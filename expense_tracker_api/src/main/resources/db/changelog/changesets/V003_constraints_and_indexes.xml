<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="V003_constraints_and_indexes" author="dharani">
        <addAutoIncrement tableName="user"    columnName="id" columnDataType="BIGINT"/>
        <addAutoIncrement tableName="expense" columnName="id" columnDataType="BIGINT"/>

        <addForeignKeyConstraint
                baseTableName="expense"
                baseColumnNames="user_id"
                constraintName="fk_expense_user"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
        <rollback>
            <dropForeignKeyConstraint
                    baseTableName="expense"
                    constraintName="fk_expense_user"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
